<div class="bgray fullheight" data-turbolinks="false">
<div class="container nogutter">
  <div class="container paddingbottom">
    <div class="col-md-8 col-md-offset-2 nogutter">
      <h3 class="paddingbottom"><strong><i class="fa-fw fa fa-wrench" aria-hidden="true"></i> Milestones</strong></h3>
      <% @milestones.each do |milestone| %>
          <a href='/gitportal/milestones/<%= milestone['number']%>' class='list-group-item'>
              <div class='markdown'>
                <div class="row">
                  <div class="col-md-2 text-center hidden-xs">
                    <h3 style="margin-top:15px;"><%= milestone['open_issues'] %> <br><small>open issues</small></h3>
                  </div>
                  <div class="col-md-10">
                    <label class='label label-primary pull-right hidden-xs'>Milestone #<%= milestone['number'] %></label>
                    <h4><%= milestone['title'] %></h4>
                    <p class="visible-xs"><%= milestone['open_issues'] %> open issues</p>
                    <p><small>
                      <% if milestone['due_on'] %>
                        <i class="fa-fw fa fa-calendar" aria-hidden="true"></i> Due by <%= Time.parse(milestone['due_on']).strftime("%b %d, %Y") %>
                      <% end %>
                      <% if milestone['updated_at'] %>
                        <i class="fa-fw fa fa-clock-o" aria-hidden="true"></i> Last updated <%= time_ago_in_words(milestone['updated_at']) %> ago
                      <% end %>
                    </small></p>
                  </div>
                </div>
              </div>
          </a>
      <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
